import os
import random
import string
from .. import loader, utils

@loader.tds
class SimpleCipherModule(loader.Module):
    strings = {
        "name": "SimpleCipher",
        "no_key": "üö´ –ö–ª—é—á —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∏—Ç–µ –º–æ–¥—É–ª—å.",
        "key_generated": "üîë –ö–ª—é—á —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω.",
    }

    def __init__(self):
        self.key = None

    async def client_ready(self, client, db):
        self.client = client
        self.db = db
        self.key = self.db.get("SimpleCipher", "key", None)

        if not self.key:
            self.key = self.generate_key()
            self.db.set("SimpleCipher", "key", self.key)
            await utils.answer(self.client, self.strings("key_generated"))

    def generate_key(self):
        return ''.join(random.choice(string.ascii_letters + string.digits) for _ in range(16))

    def xor_cipher(self, text):
        return ''.join(chr(ord(text[i]) ^ ord(self.key[i % len(self.key)])) for i in range(len(text)))

    @loader.command(ru_doc="<—Ç–µ–∫—Å—Ç> - –ó–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç")
    async def sfrcmd(self, message):
        if not self.key:
            await utils.answer(message, self.strings("no_key"))
            return

        args = utils.get_args_raw(message)
        if not args:
            await utils.answer(message, "üö´ –£–∫–∞–∂–∏—Ç–µ —Ç–µ–∫—Å—Ç –¥–ª—è —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è.")
            return

        encrypted_text = self.xor_cipher(args)
        await utils.answer(message, f"üîê `{encrypted_text}`")

    @loader.command(ru_doc="<—Ç–µ–∫—Å—Ç> - –†–∞—Å—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç")
    async def unsfrcmd(self, message):
        if not self.key:
            await utils.answer(message, self.strings("no_key"))
            return

        args = utils.get_args_raw(message)
        if not args:
            await utils.answer(message, "üö´ –£–∫–∞–∂–∏—Ç–µ —Ç–µ–∫—Å—Ç –¥–ª—è —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∫–∏.")
            return

        decrypted_text = self.xor_cipher(args)
        await utils.answer(message, f"üîì `{decrypted_text}`")
