import random
from hikkatl.tl.types import Message
from .. import loader, utils

TRANSLIT_DICT = {
    '–±': 'b', '–≤': 'v', '–≥': 'g', '–¥': 'd', '–∂': 'zh', '–∑': 'z', '–π': 'y',
    '–∫': 'k', '–ª': 'l', '–º': 'm', '–Ω': 'n', '–ø': 'p', '—Ä': 'r', '—Å': 's',
    '—Ç': 't', '—Ñ': 'f', '—Ö': 'kh', '—Ü': 'ts', '—á': 'ch', '—à': 'sh', '—â': 'shch',
    '—ä': '', '—å': '',
    '–ë': 'B', '–í': 'V', '–ì': 'G', '–î': 'D', '–ñ': 'Zh', '–ó': 'Z', '–ô': 'Y',
    '–ö': 'K', '–õ': 'L', '–ú': 'M', '–ù': 'N', '–ü': 'P', '–†': 'R', '–°': 'S',
    '–¢': 'T', '–§': 'F', '–•': 'Kh', '–¶': 'Ts', '–ß': 'Ch', '–®': 'Sh', '–©': 'Shch',
    '–™': '', '–¨': ''
}

VOWEL_TO_NUMBER = {
    '–∞': '2', '–ê': '2',
    '–æ': '0', '–û': '0',
    '—É': '7', '–£': '7',
    '—ã': 'bl', '–´': 'bl',
    '—ç': '9', '–≠': '9',
    '—é': '8', '–Æ': '8',
    '—è': '5', '–Ø': '5',
    '–∏': '1', '–ò': '1',
    '–µ': '3', '–ï': '3',
    '—ë': '3', '–Å': '3',
}

@loader.tds
class ShifratorMod(loader.Module):
    strings = {
        "name": "Shifrator",
        "usage": (
            "‚úçÔ∏è –ù–∞–ø–∏—à–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É .shifr <—Ç–µ–∫—Å—Ç>, —á—Ç–æ–±—ã –∑–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç.\n"
            "üìù –ü—Ä–∏–º–µ—Ä: .shifr –ü—Ä–∏–≤–µ—Ç, –º–∏—Ä!"
        ),
    }

    @loader.command(ru_doc="–ó–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç")
    async def shifrcmd(self, message: Message):
        args = utils.get_args_raw(message)
        if not args:
            await utils.answer(message, self.strings("usage"))
            return
        encrypted_text = self.encrypt_text(args)
        await utils.answer(message, encrypted_text)

    def encrypt_text(self, text: str) -> str:
        result = []
        for char in text:
            if char in VOWEL_TO_NUMBER:
                result.append(VOWEL_TO_NUMBER[char])
            elif char in TRANSLIT_DICT:
                result.append(TRANSLIT_DICT[char])
            else:
                result.append(char)
        return ''.join(result)
