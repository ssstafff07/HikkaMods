import random
from hikkatl.tl.types import Message
from .. import loader, utils

TRANSLIT_DICT = {
    '–±': 'b', '–≤': 'v', '–≥': 'g', '–¥': 'd', '–∂': 'zh', '–∑': 'z', '–π': 'y',
    '–∫': 'k', '–ª': 'l', '–º': 'm', '–Ω': 'n', '–ø': 'p', '—Ä': 'r', '—Å': 's',
    '—Ç': 't', '—Ñ': 'f', '—Ö': 'kh', '—Ü': 'ts', '—á': 'ch', '—à': 'sh', '—â': 'shch',
    '—ä': '', '—å': '',
    '–ë': 'B', '–í': 'V', '–ì': 'G', '–î': 'D', '–ñ': 'Zh', '–ó': 'Z', '–ô': 'Y',
    '–ö': 'K', '–õ': 'L', '–ú': 'M', '–ù': 'N', '–ü': 'P', '–†': 'R', '–°': 'S',
    '–¢': 'T', '–§': 'F', '–•': 'Kh', '–¶': 'Ts', '–ß': 'Ch', '–®': 'Sh', '–©': 'Shch',
    '–™': '', '–¨': ''
}

VOWEL_TO_NUMBER = {
    '–∞': '1', '–µ': '2', '—ë': '3', '–∏': '4', '–æ': '5', '—É': '6', '—ã': '7', '—ç': '8', '—é': '9', '—è': '0',
    '–ê': '1', '–ï': '2', '–Å': '3', '–ò': '4', '–û': '5', '–£': '6', '–´': '7', '–≠': '8', '–Æ': '9', '–Ø': '0'
}

NUMBER_TO_VOWEL = {v: k for k, v in VOWEL_TO_NUMBER.items()}  # –°–ª–æ–≤–∞—Ä—å –¥–ª—è –¥–µ—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è

@loader.tds
class ShifratorMod(loader.Module):
    strings = {
        "name": "Shifrator",
        "usage": (
            "‚úçÔ∏è –ù–∞–ø–∏—à–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É .shifr <—Ç–µ–∫—Å—Ç>, —á—Ç–æ–±—ã –∑–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç.\n"
            "üìù –ü—Ä–∏–º–µ—Ä: .shifr –ü—Ä–∏–≤–µ—Ç, –º–∏—Ä!\n"
            "üîì –ù–∞–ø–∏—à–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É .deshifr <—Ç–µ–∫—Å—Ç>, —á—Ç–æ–±—ã —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç."
        ),
    }

    @loader.command(ru_doc="–ó–∞—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç")
    async def shifrcmd(self, message: Message):
        """–ö–æ–º–∞–Ω–¥–∞ –¥–ª—è —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è —Ç–µ–∫—Å—Ç–∞"""
        args = utils.get_args_raw(message)
        if not args:
            await utils.answer(message, self.strings("usage"))
            return
        encrypted_text = self.encrypt_text(args)
        await utils.answer(message, encrypted_text) 

    @loader.command(ru_doc="–†–∞—Å—à–∏—Ñ—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç")
    async def deshifrcmd(self, message: Message):
        """–ö–æ–º–∞–Ω–¥–∞ –¥–ª—è —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è —Ç–µ–∫—Å—Ç–∞"""
        args = utils.get_args_raw(message)
        if not args:
            await utils.answer(message, self.strings("usage"))
            return
        decrypted_text = self.decrypt_text(args)
        await utils.answer(message, decrypted_text)  # –ü—Ä–æ—Å—Ç–æ –≤–æ–∑–≤—Ä–∞—â–∞–µ–º —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω—ã–π —Ç–µ–∫—Å—Ç

    def encrypt_text(self, text: str) -> str:
        """–®–∏—Ñ—Ä—É–µ—Ç —Ç–µ–∫—Å—Ç: —Ç—Ä–∞–Ω—Å–ª–∏—Ç–µ—Ä–∞—Ü–∏—è + –∑–∞–º–µ–Ω–∞ –≥–ª–∞—Å–Ω—ã—Ö –Ω–∞ —Ü–∏—Ñ—Ä—ã"""
        result = []
        for char in text:
            if char in VOWEL_TO_NUMBER:
                result.append(VOWEL_TO_NUMBER[char])
            elif char in TRANSLIT_DICT:
                result.append(TRANSLIT_DICT[char])
            else:
                result.append(char)
        return ''.join(result)

    def decrypt_text(self, text: str) -> str:
        """–†–∞—Å—à–∏—Ñ—Ä–æ–≤—ã–≤–∞–µ—Ç —Ç–µ–∫—Å—Ç: –∑–∞–º–µ–Ω–∞ —Ü–∏—Ñ—Ä –Ω–∞ –≥–ª–∞—Å–Ω—ã–µ + –æ–±—Ä–∞—Ç–Ω–∞—è —Ç—Ä–∞–Ω—Å–ª–∏—Ç–µ—Ä–∞—Ü–∏—è"""
        result = []
        for char in text:
            if char in NUMBER_TO_VOWEL:
                result.append(NUMBER_TO_VOWEL[char])
            else:
              
                result.append(char)
        return ''.join(result)
